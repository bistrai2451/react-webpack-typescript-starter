{
  "compileOnSave": true,
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es6",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
    },
    "include": [
      "src/index.tsx"
    ]
}